---
import Section from "../Section.astro";

import {projects} from '@cv'
---

<Section title="Proyectos">

    <ul>
        {
            projects.map(({url,description,highlights,name,isActive}) => {
                return(
                    <li>
                        <article>
                            <header>
                                <a href={url} title={`Ver el proyecto ${name}`}>
                                    <h3>{name}
                                        {isActive && <span>&bull;</span>}
                                    </h3>
                                </a>
                                
                                <p>{description}</p>
                            </header>
                            <footer>
                                
                                    {highlights.map((highlight) => {
                                        return(
                                                <span>{highlight}</span>
                                        );
                                    })}
                                
                            </footer>
                        </article>
                    </li>
                            );
        })}
    </ul>
    
</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article header{
        flex: 1;
    }
    article h3{
        margin-bottom: 4px;
    }
    article h3 span{
        color: rgb(32, 207, 38)

    }
    article a{
        text-decoration: none;
        color :#111;
    }
    article a:hover{
        text-decoration: underline;
    }
    article p{
        font-size: .8rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    footer{
        display: flex;
        gap: 4px;
        flex-wrap: wrap;
        font-size: .7rem;
    }
    footer span{
        border-radius: 6px;
        background: #eee;
        color: #333;
        font-size: .6rem;
        font-weight: 500;
        padding: .2rem .6rem;
    }

</style>